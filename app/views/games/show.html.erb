

<p>
  <strong>Name:</strong>
  <%= @game.name %>
</p>

<p>
  <strong>Condition:</strong>
  <%= @game.condition %>
</p>

<p>
  <strong>Min player:</strong>
  <%= @game.min_player %>
</p>

<p>
  <strong>Max player:</strong>
  <%= @game.max_player %>
</p>

<p>
  <strong>Price:</strong>
  <%= @game.price %>
</p>

<p>
  <strong>Description:</strong>
  <%= @game.description %>
</p>

<p>
  <strong>Seller:</strong>
  <%= @game.user.username %>
</p>

<% if user_signed_in? and (current_user.admin? or current_user.id == @game.user_id) %>
  <%= link_to 'Edit', edit_game_path(@game) %> |
  <%= link_to 'Destroy', @game, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
<%= link_to 'Back', games_path %>
